{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://jsonql.github.io/spec/schema/conditions.schema.json",
    "type": "object",
    "properties": {
        "relationship": {
            "type": "string",
            "enum": [
                "and",
                "or",
                "xor"
            ],
            "default": "and"
        },
        "conditions": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "The name of the named condition"
            },
            "uniqueItems": true
        }
    },
    "required": [
        "conditions"
    ]
}