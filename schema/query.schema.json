{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://jsonql.github.io/spec/schema/query.schema.json",
    "title": "Query",
    "description": "A query object",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "mono",
                "multi"
            ],
            "description": "The type of result",
            "default": "multi"
        },
        "resultRoot": {
            "type": "string",
            "description": "The root of the results",
            "default": ""
        },
        "root": {
            "type": "string",
            "description": "The root of the conditionals",
            "default": ""
        },
        "fields": {
            "type": "array",
            "description": "The fields returned in the result",
            "items": {
                "type": "string",
                "description": "A field description",
                "uniqueItems": true
            },
            "default": [
                "root.*"
            ]
        },
        "cond": {
            "$ref": "conditions.schema.json"
        },
        "named": {
            "type": "array",
            "description": "Named conditionals",
            "items": {
                "uniqueItems": false,
                "$ref": "conditional.schema.json"
            }
        }
    }
  }